<h1 class="mt-4">Tüm Bloglar</h1>

<div class="d-flex justify-content-end mb-3">
  <a href="/admin/blogs/create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Yeni Blog
  </a>
</div>

<div class="table-container">
  <table class="table table-striped table-bordered">
    <thead class="table-secondary">
      <tr>
        <th class="col-image">Resim</th>
        <th class="col-title">Başlık</th>
        <th class="col-subtitle">Alt Başlık</th>
        <th class="col-category">Kategoriler</th>
        <th class="col-status">Durum</th>
      </tr>
    </thead>
    <tbody>
      <% blogs.forEach(blog => { %>
        <tr>
          <td class="col-image">
            <img src="<%= blog.image %>" alt="<%= blog.title %>" class="img-thumbnail" style="max-width: 70px;">
          </td>
          <td class="col-title">
            <div class="truncate"><%= blog.title %></div>
            <small class="text-muted">Slug: <%= blog.slug %></small>
          </td>
          <td class="col-subtitle truncate"><%= blog.subtitle %></td>
          <td class="col-category"><%= blog.categories || 'Kategori yok' %></td>
          <td class="col-status">
            <% if(blog.isActive) { %>
              <span class="badge bg-success">Onaylı</span>
            <% } else { %>
              <span class="badge bg-warning">Beklemede</span>
            <% } %>
            <div class="mt-2">
              <a href="/admin/blogs/edit/<%= blog.id %>" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i>
              </a>
              <a href="/admin/blogs/delete/<%= blog.id %>" class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

