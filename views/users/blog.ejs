<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container mt-5">
        <div class="row">            <div class="col-md-8 offset-md-2">
                <div class="card mb-3">
                    <div class="card-body">
                        <h1 class="h2 mb-3 text-center"><%= blog.title %></h1>
                        
                        <% if (blog.resim) { %>
                            <div class="text-center mb-4">
                                <img 
                                    src="/resimler/<%= blog.resim %>" 
                                    class="img-fluid rounded" 
                                    alt="<%= blog.title %>"
                                    style="max-height: 400px; object-fit: cover; max-width: 100%;"
                                >
                            </div>
                        <% } %>
                        
                        <% if (blog.altbaslik) { %>
                            <h2 class="h4 mb-4 text-muted text-center"><%= blog.altbaslik %></h2>
                        <% } %>
                        
                        <div class="blog-content">
                            <%- blog.content %>
                        </div>
                        
                        <% if (blog.Categories && blog.Categories.length > 0) { %>
                            <hr class="my-4">
                            <div class="d-flex flex-wrap gap-2">
                                <span class="text-muted me-2">Kategoriler:</span>
                                <% blog.Categories.forEach(category => { %>
                                    <span class="badge bg-primary"><%= category.name %></span>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts') %>
</body>
</html>